        Purple: 'text-purple',
        Orange: 'text-orange',
        Pink: 'text-pink',
        White: 'text-white',
        Black: 'text-black'
      };

      const observer = new IntersectionObserver((entries) => {
        const visible = entries.find(e => e.isIntersecting);
        if (visible) {
          const color = visible.target.getAttribute('data-color');
          if (!color) return; // guard for non-project wrappers
          if (color !== currentColor) {
            currentColor = color;
            updateTextVisibility(color);
          }
        }
      }, observerOptions);

      function updateTextVisibility(activeColor) {
        for (const [color, id] of Object.entries(colorIds)) {
          const el = document.getElementById(id);
          if (!el) continue;
          el.classList.toggle('active', color === activeColor);
        }
      }

      // Only observe project tiles (with a data-color)
      document.querySelectorAll('.image-wrapper[data-color]').forEach(wrapper => {
        observer.observe(wrapper);
      });

      const spinImg = document.getElementById('spinning-portrait');
      const scrollArea = document.getElementById('scroll-area');

      scrollArea.addEventListener('scroll', () => {
        const scrollTop = scrollArea.scrollTop;
        const rotation = scrollTop * 0.2; // adjust multiplier for spin speed
        spinImg.style.transform = `rotate(${rotation}deg)`;
      });
    </script>

    <!-- Vimeo player API (optional; include if you'll control playback via JS) -->
    <script src="https://player.vimeo.com/api/player.js"></script>
  </body>
</html>
